@page
@model Solita2023Assignment.Pages.Journeys.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Journey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Journey.DepartureStation" class="control-label"></label>
                <select asp-for="Journey.DepartureStationID" class="form-control" asp-items="ViewBag.DepartureStationID">
                    <option value="">Choose a station</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Journey.DepartureTime" class="control-label"></label>
                <input asp-for="Journey.DepartureTime" class="form-control" />
                <span asp-validation-for="Journey.DepartureTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Journey.ArrivalStation" class="control-label"></label>
                <select asp-for="Journey.ArrivalStationID" class="form-control" asp-items="ViewBag.ArrivalStationID">
                    <option value="">Choose a station</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Journey.ArrivalTime" class="control-label"></label>
                <input asp-for="Journey.ArrivalTime" class="form-control" />
                <span asp-validation-for="Journey.ArrivalTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Journey.DistanceMeters" class="control-label"></label>
                <input asp-for="Journey.DistanceMeters" class="form-control" />
                <span asp-validation-for="Journey.DistanceMeters" class="text-danger"></span>
            </div>
            <!-- TODO: Don't allow manual duration, calculate it from departure and arrival times.
                 TODO: Show calculated duration when Departure and Arrival times changed. JavaScript? -->
            <div class="form-group">
                <label asp-for="Journey.DurationSeconds" class="control-label"></label>
                <input asp-for="Journey.DurationSeconds" class="form-control" />
                <span asp-validation-for="Journey.DurationSeconds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
